<Window x:Class="MicrosoftAppStoreClone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MicrosoftAppStoreClone"
        xmlns:uc="clr-namespace:MicrosoftAppStoreClone.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" 
        Name="MainWindowMetro"
        Height="900" Width="1350"
        WindowStartupLocation="CenterScreen"
        Top="0">
    <Grid>
        <Frame Name="MainFrame"
               Loaded="MainFrame_Loaded"
               NavigationUIVisibility="Hidden"
               Width="{Binding ElementName=MainWindowMetro, Path=ActualWidth}"
               Height="{Binding ElementName=MainWindowMetro, Path=ActualHeight}"
               Visibility="Visible"
                />
    </Grid>
</Window>
