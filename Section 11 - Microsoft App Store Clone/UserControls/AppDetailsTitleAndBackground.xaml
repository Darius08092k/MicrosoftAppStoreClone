<UserControl x:Class="MicrosoftAppStoreClone.UserControls.AppDetailsTitleAndBackground"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MicrosoftAppStoreClone.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="1200">
    <Grid Name="AppViewAndBackgroudnGrid"
          Height="580">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <Image x:Name="BackgroundImage"
               Grid.Row="0" Grid.RowSpan="2"
               Grid.Column="0" Grid.ColumnSpan="3"
               Source="\Images\AppDetailIcons\FieldBackground.jpg"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Stretch="Fill"/>

        <Button x:Name="BackButton"
                Grid.Column="0"
                Width="35" Height="35"
                Content="&lt;"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="BackButton_Click"/>

        <Grid x:Name="AppVideView"
              Grid.Row="1"
              Grid.Column="1"
              Background="#2e2e2e"
              Margin="10,10,50,20" Grid.ColumnSpan="2"
            >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.18"/>
                <ColumnDefinition Width="0.6"/>
                <ColumnDefinition Width="0.22"/>
            </Grid.ColumnDefinitions>

            <Image x:Name="AppImage"
                   Grid.Column="2"
                   Source="\Images\AppDetailIcons\01-tea.png"
                   VerticalAlignment="Center"
                   Stretch="Uniform"
                   Margin="0,15,-200,15" 
   />

            <StackPanel x:Name="MiddleStackPanel"
                        Grid.Row="0"
                        Grid.Column="2"
                        Margin="200,0,-895,0"
                        Orientation="Vertical">
                <Label x:Name="AppTitleLabel"
                       Content="Tea Time"
                       FontSize="30"
                       Foreground="White"/>

                <StackPanel Orientation="Horizontal">
                    <Label x:Name="AppRatingLabel"
                           Content="Tea Entertainment"
                           FontSize="16"
                           Foreground="#009cfa"
                           Margin="0,0,4,0"/>
                    <Label x:Name="AppReviewsLabel"
                           Content="Action Adventure"
                           FontSize="16"
                           Foreground="#009cfa"/>
                    <Label 
                            Content="Tea"
                            FontSize="16"
                            Foreground="#009cfa"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label FontSize="12" Foreground="White">Official Club</Label>
                    <Label FontSize="12" Foreground="White">Share</Label>
                </StackPanel>
                <TextBlock TextWrapping="Wrap"
                            Width="695"
                            Foreground="White"
                            FontSize="12"
                           HorizontalAlignment="Left"
                           Margin="4,10,0,0">
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. 
                    Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. 
                </TextBlock>
            </StackPanel>

            <StackPanel Name="RightStackPanel"
                        Grid.Row="0" Grid.Column="2"
                        Margin="900,10,-1000,20">
                <Label FontSize="18" Foreground="Gray">Free+</Label>
                <Button Background="#009cfa" Foreground="White" Height="30">Get</Button>

            </StackPanel>

        </Grid>

    </Grid>
</UserControl>
