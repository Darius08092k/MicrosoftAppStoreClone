<UserControl x:Class="MicrosoftAppStoreClone.UserControls.ProductivityTopApps"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MicrosoftAppStoreClone.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.33*"/>
            <RowDefinition Height="0.33*"/>
            <RowDefinition Height="0.33*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
        </Grid.ColumnDefinitions>

        <Image Name="LeftLargeImage" 
            Grid.Row="0" 
               Grid.Column="0" 
               Grid.RowSpan="2"
               Grid.ColumnSpan="2"
               VerticalAlignment="Stretch"
               HorizontalAlignment="Stretch"
               Stretch="Fill"
               Source="/Images/ProductivityAppIcons/YourPhone.png" 
               Margin="4"
               MouseUp="Image_MouseUp"/>
        <Image Name="RightLargeImage"
            Grid.Row="0" 
               Grid.Column="2" 
               Grid.RowSpan="2"
               Grid.ColumnSpan="2"
               VerticalAlignment="Stretch"
               HorizontalAlignment="Stretch"
               Stretch="Fill"
               Source="/Images/ProductivityAppIcons/Photoshop.png" 
               Margin="4"
               MouseUp="Image_MouseUp"/>
        <Image Name="BottomLeftImage"
            Grid.Row="2" 
               Grid.Column="0" 
               VerticalAlignment="Stretch"
               HorizontalAlignment="Stretch"
               Stretch="Fill"
               Source="/Images/ProductivityAppIcons/ACDSee.png" 
               Margin="4,4,4,4"
               MouseUp="Image_MouseUp"/>
        <Image Name="BottomCenterLeftImage" 
            Grid.Row="3" 
               Grid.Column="1" 
               VerticalAlignment="Stretch"
               HorizontalAlignment="Stretch"
               Stretch="Fill"
               Source="/Images/ProductivityAppIcons/PicsArt.png" 
               Margin="4"
               MouseUp="Image_MouseUp"/>
        <Image Name="BottomCenterRightImage"
            Grid.Row="2" 
               Grid.Column="2" 
               VerticalAlignment="Stretch"
               HorizontalAlignment="Stretch"
               Stretch="Fill"
               Source="/Images/ProductivityAppIcons/HotspotShield.png" 
               Margin="4"
               MouseUp="Image_MouseUp"/>
        <Image Name="BottomRightImage" 
            Grid.Row="2" 
               Grid.Column="3" 
               VerticalAlignment="Stretch"
               HorizontalAlignment="Stretch"
               Stretch="Fill"
               Source="/Images/ProductivityAppIcons/DrawboardPDF.png" 
               Margin="4"
               MouseUp="Image_MouseUp"/>

    </Grid>
</UserControl>
