<UserControl x:Class="MicrosoftAppStoreClone.UserControls.HamburgerMenuViews.AllOwned"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MicrosoftAppStoreClone.UserControls.HamburgerMenuViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer Name="MainScrollViewer"
                  HorizontalScrollBarVisibility="Hidden">
        <StackPanel>
            <local:HamburgermenuHeader x:Name="HamHeader"></local:HamburgermenuHeader>
            <local:HamburgerMenuAppList x:Name="HamAppsList"></local:HamburgerMenuAppList>
        </StackPanel>
    </ScrollViewer>
</UserControl>
