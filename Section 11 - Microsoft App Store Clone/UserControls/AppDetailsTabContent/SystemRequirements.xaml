<UserControl x:Class="MicrosoftAppStoreClone.UserControls.AppDetailsTabContent.SystemRequirements"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MicrosoftAppStoreClone.UserControls.AppDetailsTabContent"
             xmlns:uc="clr-namespace:MicrosoftAppStoreClone.UserControls"
             mc:Ignorable="d" 
             Name="SystemRequirementsUserControl"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Visibility="Visible"
                Background="#2e2e2e"
                Width="{Binding ElementName=SystemRequirementsUserControl, Path=ActualWidth}">

    <Label FontSize="25" Foreground="White">This product should work on</Label>
        <TextBlock 
            FontSize="12"
            Margin="5,5,15,5"
            Foreground="White"
            TextAlignment="Left"
            TextWrapping="Wrap"
            Text="Check the minimum requirements to be sure"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>

            <Label Grid.Column="0" FontSize="12" FontWeight="Bold" Foreground="White">Minimum Requirements:</Label>
            <Label Grid.Column="0" Grid.Row="1" 
                   FontSize="12" 
                   Foreground="White"
                   >Your device must meet all requirements:</Label>

            <Grid x:Name="ReqMinGrid"
                  Grid.Row="2"
                  Grid.Column="0"
                  Margin="0,0,10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*"/>
                    <ColumnDefinition Width="0.7*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical" Grid.Column="0">
                    <Border BorderThickness="1" BorderBrush="#434343"></Border>
                    <Label HorizontalAlignment="Left"
                           FontSize="12" 
                           Foreground="White"
                           FontWeight="Bold"
                           Content="OS"/>

                    <Border BorderThickness="1" BorderBrush="White"></Border>
                    <Label HorizontalAlignment="Left"
                           FontSize="12" 
                           Foreground="White"
                           FontWeight="Bold"
                           Content="Architecture"/>

                    <Border BorderThickness="1" BorderBrush="White"></Border>
                    <Label HorizontalAlignment="Left"
                           FontSize="12" 
                           Foreground="White"
                           FontWeight="Bold"
                           Content="Memory"/>
                    <Border BorderThickness="1" BorderBrush="White"></Border>
                </StackPanel>
                <StackPanel Orientation="Vertical" Grid.Column="1">
                    <Border BorderThickness="1" BorderBrush="#434343"></Border>
                    <Label HorizontalAlignment="Left"
                           FontSize="12" 
                           Foreground="White"
                           Content="Windows 10 version or higher"/>

                    <Border BorderThickness="1" BorderBrush="White"></Border>
                    <Label HorizontalAlignment="Left"
                           FontSize="12" 
                           Foreground="White"
                           Content="x86, x64"/>

                    <Border BorderThickness="1" BorderBrush="White"></Border>
                    <Label HorizontalAlignment="Left"
                           FontSize="12" 
                           Foreground="White"
                           Content="2 GB"/>
                    <Border BorderThickness="1" BorderBrush="White"></Border>
                </StackPanel>

            </Grid>





            <Label Grid.Column="1" FontSize="12" FontWeight="Bold" Foreground="White">Recomended:</Label>
            <Label Grid.Column="1" Grid.Row="1" 
                   FontSize="12" 
                   Foreground="White" Margin="0,0,0,86" Grid.RowSpan="2"
                   >Your device should meet all requirements:</Label>


            <Grid x:Name="RecommendedGrid"
                  Grid.Row="2"
                  Grid.Column="1"
                  Margin="0,0,10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*"/>
                    <ColumnDefinition Width="0.7*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical" Grid.Column="0">
                    <Border BorderThickness="1" BorderBrush="#434343"></Border>
                    <Label HorizontalAlignment="Left"
                           FontSize="12" 
                           Foreground="White"
                           FontWeight="Bold"
                           Content="OS"/>

                    <Border BorderThickness="1" BorderBrush="White"></Border>
                    <Label HorizontalAlignment="Left"
                           FontSize="12" 
                           Foreground="White"
                           FontWeight="Bold"
                           Content="Architecture"/>

                    <Border BorderThickness="1" BorderBrush="White"></Border>
                    <Label HorizontalAlignment="Left"
                           FontSize="12" 
                           Foreground="White"
                           FontWeight="Bold"
                           Content="Memory"/>
                    <Border BorderThickness="1" BorderBrush="White"></Border>
                </StackPanel>
                <StackPanel Orientation="Vertical" Grid.Column="1">
                    <Border BorderThickness="1" BorderBrush="#434343"></Border>
                    <Label HorizontalAlignment="Left"
                           FontSize="12" 
                           Foreground="White"
                           Content="Windows 10 version or higher"/>

                    <Border BorderThickness="1" BorderBrush="White"></Border>
                    <Label HorizontalAlignment="Left"
                           FontSize="12" 
                           Foreground="White"
                           Content="x86, x64"/>

                    <Border BorderThickness="1" BorderBrush="White"></Border>
                    <Label HorizontalAlignment="Left"
                           FontSize="12" 
                           Foreground="White"
                           Content="Not specified"/>
                    <Border BorderThickness="1" BorderBrush="White"></Border>
                </StackPanel>

            </Grid>



        </Grid>

    </StackPanel>
</UserControl>
