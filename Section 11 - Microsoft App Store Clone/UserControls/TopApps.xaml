<UserControl x:Class="MicrosoftAppStoreClone.UserControls.TopApps"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MicrosoftAppStoreClone.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.33*"/>
            <RowDefinition Height="0.33*"/>
            <RowDefinition Height="0.33*"/>
        </Grid.RowDefinitions>


        <Image Grid.Row="0" 
               Grid.Column="0" 
               Grid.RowSpan="2"
               Grid.ColumnSpan="3"
               VerticalAlignment="Stretch"
               HorizontalAlignment="Stretch"
               Stretch="Fill"
               Source="/Images/TopAppIcons/81-tropical.png" 
               Margin="2,2,2,2"
               MouseUp="Image_MouseUp"/>

        <Image Name="TopImage"
                Grid.Row="0"
                Grid.Column="3"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Stretch="Fill"
                Source="/Images/TopAppIcons/82-circus fun.png" 
                Margin="2,2,2,2"
                MouseUp="Image_MouseUp"/>

        <Image Name="MiddleImage"
                Grid.Row="1"
                Grid.Column="3"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Stretch="Fill"
                Source="/Images/TopAppIcons/83-Race extreme.png" 
                Margin="2,2,2,2"
                MouseUp="Image_MouseUp"/>

        <Image Name="BottomImage"
                Grid.Row="3"
                Grid.Column="3"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Stretch="Fill"
                Source="/Images/TopAppIcons/84-chat message.png" 
                Margin="2,2,2,2"
                MouseUp="Image_MouseUp"/>

        <Image Grid.Row="2"
            Grid.Column="2"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Stretch="Fill"
            Source="/Images/TopAppIcons/85-Night castle.png"
            Margin="2,2,2,2"
            MouseUp="Image_MouseUp"/>

        <Canvas Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="4"
            Grid.RowSpan="3"
            Opacity="0.4"
            Background="#2e2e2e"
            IsHitTestVisible="False">
        </Canvas>

        <Grid Name="BottomGrid"
              Grid.Row="2"
              Grid.Column="0"
              Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>

            <Button Name="TopAppsButton"
                    Grid.Row="0"
                    Grid.Column="0"
                    FontSize="18"
                    Margin="2,2,2,2"
                    Click="TopAppsButton_Click"> Top apps</Button>
            
            <Button Name="Featured"
                    Grid.Row="0"
                    Grid.Column="1"
                    FontSize="18"
                    Margin="2,2,2,2"
                    Click="Featured_Click">Featured</Button>

            <Button Name="CollectionsButton"
                    Grid.Row="1"
                    Grid.Column="0"
                    FontSize="18"
                    Margin="2,2,2,2"
                    Click="CollectionsButton_Click">Collections</Button>

            <Button Name="TopGamesButton"
                    Grid.Row="1"
                    Grid.Column="1"
                    FontSize="18"
                    Margin="2,2,2,2"
                    Click="TopGamesButton_Click">Top Games</Button>
        </Grid>

        <Label Name="TropicalLabel"
                Grid.Column="0" Grid.Row="0"
                Grid.ColumnSpan="2" Grid.RowSpan="2"
                FontSize="25" FontWeight="DemiBold"
                Foreground="White"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                >Tropical</Label>

        <Label Name="CircusLabel"
                Grid.Column="3" Grid.Row="0"
                FontSize="16" FontWeight="DemiBold"
                Foreground="White"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                >Circus</Label>

        <Label Name="RaceExtremeLabel"
                Grid.Column="3" Grid.Row="1"
                FontSize="16" FontWeight="DemiBold"
                Foreground="White"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                >Race Extreme</Label>

        <Label Name="ChatMessageLabel"
                Grid.Column="3" Grid.Row="2"
                FontSize="16" FontWeight="DemiBold"
                Foreground="White"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                >Chat Message</Label>

        <Label Name="NightCastleLabel"
                Grid.Column="2" Grid.Row="2"
                FontSize="16" FontWeight="DemiBold"
                Foreground="White"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                >Night Castle</Label>

    </Grid>
</UserControl>
